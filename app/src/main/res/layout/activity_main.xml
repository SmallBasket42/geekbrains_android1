<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:hint="@string/ok_button"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enter_text"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/enter_text"
        android:textSize="23sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ok_button"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:hint="@string/textview_weather"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/textview_weather"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/text_temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:hint="@string/text_temperature"
        android:textColor="#FFFFFF"
        android:textDirection="ltr"
        android:textColorHint="@color/textview_weather"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_temperature"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582" />

    <TextView
        android:id="@+id/view_temperature"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:hint="@string/view_temperature"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <TextView
        android:id="@+id/view_humidity"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:hint="@string/view_humidity"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712" />

    <CheckBox
        android:id="@+id/wind_speed"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:buttonTint="#FFFFFF"
        android:drawingCacheQuality="auto"
        android:gravity="center"
        android:hint="@string/wind_speed"
        android:textAlignment="gravity"
        android:textDirection="ltr"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/wind_speed"
        android:textColorLink="@color/colorAccent"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_windspeed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />

    <TextView
        android:id="@+id/view_windspeed"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:hint="@string/view_windspeed"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />

    <CheckBox
        android:id="@+id/humidity"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:buttonTint="#FFFFFF"
        android:gravity="center"
        android:hint="@string/humidity"
        android:textDirection="ltr"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/humidity"
        android:textColorLink="@color/colorAccent"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_humidity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wind_speed"
        app:layout_constraintVertical_bias="0.005" />

</androidx.constraintlayout.widget.ConstraintLayout>

